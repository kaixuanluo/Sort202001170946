<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChartView">
        <item name="chartTextColor">@color/colorPrimaryDark</item>
        <item name="chartTextSize">10dp</item>
        <item name="chartColor">@color/colorPrimary</item>
        <item name="chartColor2">@color/color5</item>
        <item name="chartColor3">@color/color4</item>
        <item name="chartTopColor">@color/colorPrimary</item>
        <item name="chartBottomColor">@color/colorAccent</item>
        <item name="chartSpace">20dp</item>
        <item name="chartInterval">100</item>
    </style>
</resources>
